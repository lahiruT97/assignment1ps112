<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/UserId"
        android:layout_width="77dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:textSize="18dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="User ID" />

    <EditText
        android:id="@+id/txtUserId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:textSize="18dp"
        android:layout_toRightOf="@+id/UserId"
        android:ems="10"
        android:inputType="text" />

    <Button
        android:id="@+id/btnGetData"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UserId"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:layout_marginRight="70dp"
        android:background="@color/black"
        android:text="Enter" />

    <TextView
        android:id="@+id/UserProfile"
        android:layout_width="19dp"
        android:layout_height="0dp"
        android:layout_below="@+id/btnGetData"
        android:layout_marginTop="-1dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <ScrollView
        android:id="@+id/scrollViewUserProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UserProfile">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/Name"
                android:layout_width="63dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:gravity="center"
                android:text="Name"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtName"
                android:layout_width="228dp"
                android:layout_height="40dp"
                android:layout_marginLeft="27dp"
                android:layout_toRightOf="@+id/Name"
                android:ems="10"
                android:focusable="false"
                android:inputType="text"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/Username"
                android:layout_width="86dp"
                android:layout_height="40dp"
                android:layout_below="@+id/Name"
                android:layout_marginStart="15dp"
                android:layout_marginTop="22dp"
                android:gravity="center"
                android:text="Username"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtUsername"
                android:layout_width="228dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtName"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="21dp"
                android:layout_toRightOf="@+id/Username"
                android:ems="10"
                android:focusable="false"
                android:inputType="text"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/Email"
                android:layout_width="55dp"
                android:layout_height="40dp"
                android:layout_below="@+id/Username"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="Email"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtEmail"
                android:layout_width="228dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtUsername"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="27dp"
                android:layout_toRightOf="@+id/Username"
                android:ems="10"
                android:focusable="false"
                android:inputType="text"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/Phone"
                android:layout_width="55dp"
                android:layout_height="40dp"
                android:layout_below="@+id/Email"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="Phone"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtPhone"
                android:layout_width="228dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtEmail"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@+id/Username"
                android:ems="10"
                android:focusable="false"
                android:inputType="text" />

            <TextView
                android:id="@+id/AdStreet"
                android:layout_width="55dp"
                android:layout_height="40dp"
                android:layout_below="@+id/Phone"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="Street"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtAdStreet"
                android:layout_width="228dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtPhone"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="11dp"
                android:layout_toRightOf="@+id/Username"
                android:ems="10"
                android:focusable="false"
                android:inputType="text"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/AdSuite"
                android:layout_width="55dp"
                android:layout_height="40dp"
                android:layout_below="@+id/AdStreet"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="Suite"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtAdSuite"
                android:layout_width="228dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtAdStreet"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="24dp"
                android:layout_toRightOf="@+id/Username"
                android:ems="10"
                android:focusable="false"
                android:inputType="text" />

            <TextView
                android:id="@+id/AdCity"
                android:layout_width="55dp"
                android:layout_height="40dp"
                android:layout_below="@+id/AdSuite"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="City"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtAdCity"
                android:layout_width="228dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtAdSuite"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@+id/Username"
                android:ems="10"
                android:focusable="false"
                android:inputType="text" />

            <TextView
                android:id="@+id/AdZip"
                android:layout_width="55dp"
                android:layout_height="40dp"
                android:layout_below="@+id/AdCity"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:text="ZIP"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtAdZip"
                android:layout_width="228dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtAdCity"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="30dp"
                android:layout_toRightOf="@+id/Username"
                android:ems="10"
                android:focusable="false"
                android:inputType="text" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>